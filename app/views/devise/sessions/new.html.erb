<div class="max-w-lg mx-auto p-8 bg-white rounded-lg shadow-md shadow-gray-400 mt-16 border border-gray-300">
  <h2 class="text-2xl font-semibold text-center mb-6">ログイン</h2>

  <% if notice %>
    <p class="text-green-500 mt-6"><%= notice %></p>
      <% elsif alert %>
    <p class="text-red-500 mt-6"><%= alert %></p>
  <% end %>

  <%= form_for(resource, as: resource_name, url: new_user_session_path, html: { data: { turbo: false } }) do |f| %>
    <div class="mb-4">
      <% if resource.errors[:email].any? %>
        <div class="text-red-600 text-sm mb-1">
          <%= resource.errors.full_messages_for(:email).join(", ") %>
        </div>
      <% end %>
      <%= f.label :email, "メールアドレス", class: "block text-gray-700 font-medium" %>
      <%= f.email_field :email, class: "w-full border border-gray-300 rounded px-3 py-2 mt-1", placeholder: "メールアドレス", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="mb-4">
      <% if resource.errors[:password].any? %>
        <div class="text-red-600 text-sm mb-1">
          <%= resource.errors.full_messages_for(:password).join(", ") %>
        </div>
      <% end %>
      <%= f.label :password, "パスワード", class: "block text-gray-700 font-medium" %>
      <%= f.password_field :password, class: "w-full border border-gray-300 rounded px-3 py-2 mt-1", placeholder: "パスワード" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-4 flex items-center">
        <%= f.check_box :remember_me, class: "mr-2" %>
        <%= f.label :remember_me, "記憶する", class: "text-gray-700" %>
      </div>
    <% end %>

    <%= f.submit "ログイン", class: "w-full py-3 bg-blue-500 text-white rounded-lg hover:bg-blue-600" %>
  <% end %>

  <div class="text-center py-6 mt-8 mx-auto">
    <div class="card-text">
      <%= link_to "アカウント作成", new_user_registration_path, class: "text-blue-500 hover:text-blue-700 text-lg" %>
    </div>
  </div>
</div>
