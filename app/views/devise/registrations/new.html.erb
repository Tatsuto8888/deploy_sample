<div class="max-w-lg mx-auto p-8 bg-white rounded-lg shadow-md shadow-gray-400 mt-16 border border-gray-300">
  <h2 class="text-2xl font-semibold text-center mb-6">アカウント作成</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="mb-4">
      <% if resource.errors[:user_name].any? %>
        <div class="text-red-600 text-sm mb-1">
          <%= resource.errors.full_messages_for(:user_name).join(", ") %>
        </div>
      <% end %>
      <%= f.label :user_name, "ユーザーネーム", class: "block text-gray-700 font-medium" %>
      <%= f.text_field :user_name, class: "w-full border border-gray-300 rounded px-3 py-2 mt-1" %>
    </div>

    <div class="mb-4">
      <% if resource.errors[:email].any? %>
        <div class="text-red-600 text-sm mb-1">
          <%= resource.errors.full_messages_for(:email).join(", ") %>
        </div>
      <% end %>
      <%= f.label :email, "メールアドレス", class: "block text-gray-700 font-medium" %>
      <%= f.email_field :email, class: "w-full border border-gray-300 rounded px-3 py-2 mt-1" %>
    </div>

    <div class="mb-4">
      <% if resource.errors[:password].any? %>
        <div class="text-red-600 text-sm mb-1">
          <%= resource.errors.full_messages_for(:password).join(", ") %>
        </div>
      <% end %>
      <%= f.label :password, "パスワード", class: "block text-gray-700 font-medium" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full border border-gray-300 rounded px-3 py-2 mt-1" %>
    </div>

    <div class="mb-6">
      <% if resource.errors[:password_confirmation].any? %>
        <div class="text-red-600 text-sm mb-1">
          <%= resource.errors.full_messages_for(:password_confirmation).join(", ") %>
        </div>
      <% end %>
      <%= f.label :password_confirmation, "パスワード確認", class: "block text-gray-700 font-medium" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full border border-gray-300 rounded px-3 py-2 mt-1" %>
    </div>

    <div class="mt-6">
      <div class="flex justify-center">
        <%= f.submit "アカウント作成", class: "bg-blue-500 text-white px-6 py-3 rounded-full shadow-md hover:bg-blue-600" %>
      </div>
    </div>
  <% end %>

  <div class="text-center py-6 mt-8">
    <p>既にアカウントをお持ちですか？
      <%= link_to "ログイン", new_user_session_path, class: "text-blue-500 hover:text-blue-700 text-lg" %>
    </p>
  </div>
</div>
