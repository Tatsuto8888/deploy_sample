<h1 class="text-2xl font-bold text-center mb-6">貯金内容を編集しよう！</h1>

<div class="max-w-lg mx-auto p-4 bg-white shadow-md rounded-lg">
  <%= form_with model: @board, local: true do |f| %>
    <!-- 貯金額（文字で保存） -->
    <div class="mb-4">
      <%= f.label :amount, "貯金額", class: "block font-medium" %><br>
      <%= f.select :amount, options_for_select([
        "1円以上",
        "5円以上",
        "10円以上",
        "50円以上",
        "100円以上",
        "500円以上",
        "1000円以上",
        "5000円以上",
        "10000円以上"
      ], @board.amount), { prompt: "選択してください" }, class: "border p-2 rounded w-full" %>
    </div>

    <!-- 感想 -->
    <div class="mb-4">
      <%= f.label :body, "感想", class: "block font-medium" %><br>
      <%= f.text_area :body, rows: 4, class: "w-full border p-2 rounded" %>
    </div>

    <!-- ボタンエリア -->
    <div class="flex justify-between">
      <%= link_to "キャンセル", boards_path, class: "bg-gray-300 hover:bg-gray-400 text-black px-4 py-2 rounded" %>
      <%= f.submit "更新する", class: "bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded" %>
    </div>
  <% end %>
</div>
